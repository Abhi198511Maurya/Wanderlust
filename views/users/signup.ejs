<% layout('/layouts/boilerplate') -%>

    <div class="row mt-3">
        <h1 class="col-6 offset-2">SignUp on Wanderlust</h1>
        <div class="col-8 offset-2">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label m-3">Username</label>
                    <input type="text" id="username" name="username" placeholder="enter username" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label m-3">Email</label>
                    <input type="email" id="email" name="email" placeholder="enter email" class="form-control"
                        required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label m-3">Password</label>
                    <input type="password" id="password" name="password" placeholder="enter password" class="form-control"
                        required>
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>